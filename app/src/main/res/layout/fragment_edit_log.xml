<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditLogFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Log"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/expandableTextView"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="7dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="Log Data"
            android:textAlignment="center"
            android:textSize="12dp"
            app:animation_duration="300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lazyDatePicker" />

        <com.mikhaellopez.lazydatepicker.LazyDatePicker
            android:id="@+id/lazyDatePicker"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/expandableTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/richEditor"
            app:ldp_date_format="mm-dd-yyyy">

        </com.mikhaellopez.lazydatepicker.LazyDatePicker>

        <EditText
            android:id="@+id/edttxtNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Notes to append"
            android:inputType="textMultiLine"
            android:textAlignment="center" />

    </LinearLayout>

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout xmlns:rfal="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_log_rfal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        rfal:layout_constraintBottom_toBottomOf="parent"
        rfal:layout_constraintEnd_toEndOf="parent"
        rfal:layout_constraintHorizontal_bias="0.0"
        rfal:layout_constraintStart_toStartOf="parent"
        rfal:layout_constraintTop_toTopOf="parent"
        rfal:layout_constraintVertical_bias="0.0"
        rfal:rfal_frame_alpha="1"
        rfal:rfal_frame_color="#01ffffff">

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_log_rfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:padding="8dp"
            rfab:rfab_color_normal="#FC7A60"
            rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            rfab:rfab_shadow_color="#ffffff00"
            rfab:rfab_shadow_dx="5dp"
            rfab:rfab_shadow_dy="5dp"
            rfab:rfab_shadow_radius="7dp"
            rfab:rfab_size="normal" />

    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>

</FrameLayout></layout>